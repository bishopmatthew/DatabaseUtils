	<!-- SEARCH QUERIES -->
	<query name="load_monthly_transactions_by_type">
		SELECT 
		Transactions.id, Transactions.id_category, Transactions.transaction_name, Transactions.transaction_date, Transactions.transaction_amount
		FROM 
		Transactions
		INNER JOIN
		Categories
		ON
		Transactions.id_category = Categories.id
		WHERE
		Categories.id_category_type=?
		AND
		Transactions.transaction_date&gt;=? 
		AND
		Transactions.transaction_date&lt;=?
		ORDER BY
		Transactions.transaction_date ASC
	</query>
	<query name="load_recurring_transactions_between_dates">
		SELECT 
		Transactions.id, Transactions.id_category, Transactions.transaction_name, Transactions.transaction_date, Transactions.transaction_amount
		FROM 
		Transactions
		INNER JOIN
		Categories
		ON
		Transactions.id_category = Categories.id
		WHERE
		Categories.recurring=?
		AND
		Transactions.transaction_date&gt;=? 
		AND
		Transactions.transaction_date&lt;=?
		ORDER BY
		Transactions.transaction_date ASC
	</query>
	
