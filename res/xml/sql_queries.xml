<sql>
	<query name="create_table_types">
		CREATE TABLE Types
		(
		id INTEGER PRIMARY KEY,
		type_name VARCHAR
		)
	</query>

	<query name="create_table_categories">
		CREATE TABLE Categories
		(
		id INTEGER PRIMARY KEY,
		id_category_type INT,
		position INT, <!-- Added this to handle the ordering of the categories within their respective id_category_type -->
		enabled INTEGER, <!-- boolean -->
		recurring INTEGER, <!-- boolean -->
		editable INTEGER, <!-- boolean -->
		category_name VARCHAR,
		max_amount FLOAT
		)
	</query>

	<query name="create_table_transactions">
		CREATE TABLE Transactions
		(
		id INTEGER PRIMARY KEY,
		id_category INT,
		transaction_date TEXT, <!-- stored with SimpleDateFormat 'yyyy-MM-dd HH:mm' -->
		transaction_name VARCHAR,
		transaction_amount FLOAT
		)
	</query>
